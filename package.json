{
  "name": "opencode-quota-plugin",
  "description": "OpenCode plugin to display subscription quotas for GitHub Copilot, ChatGPT Codex, and z.ai",
  "version": "0.1.1",
  "type": "module",
  "license": "MIT",
  "main": "./dist/index.js",
  "files": [
    "dist",
    "README.md"
  ],
  "exports": {
    ".": {
      "import": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "bun build ./src/index.ts --outdir ./dist --target node",
    "format": "prettier --write --log-level warn .",
    "test": "bun test",
    "lint": "biome check . && prettier --check --log-level warn ."
  },
  "devDependencies": {
    "@biomejs/biome": "2.4.0",
    "@opencode-ai/plugin": "1.2.5",
    "@types/bun": "latest",
    "prettier": "3.8.1"
  },
  "peerDependencies": {
    "typescript": "^5"
  }
}
